<script>
    var ctx = document.getElementById('myChart');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['0-18', '19-30', '31-50', '51-65', '65+'],
            datasets: [{
                label: 'Age Histogram',
                data: [<%= @bucket_1 %>, <%= @bucket_2 %>, <%= @bucket_3 %>, <%= @bucket_4 %>, <%= @bucket_5 %>],
